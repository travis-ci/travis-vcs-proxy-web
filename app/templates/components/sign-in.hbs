{{#if this.auth.requires2FA}}
<h2 class='mb-0 mt-64 text-black'>Two-factor authentication</h2>
<p class='fs-18 w-450 text-black'>Open the two-factor authentication app on your device and enter the 6-digit verification code generated by the app.</p>
<div>
  <h3>Authentication code</h3>
  <div class='entry-field'>
    <Input
      @id='otp_attempt'
      @value={{this.otp_attempt}}
      @type='text'
      @placeholder='6 digit code'
      class='text-field'
    />
  </div>
  <ExternalLinkTo
    href={{this.config.urls.twofactor}}
    title="What’s this?"
    class='float-right turf-green fw-600'
  >
    What’s this?
  </ExternalLinkTo>
</div>
<div>
  <button type='button' class='button button--green button--very-large mt-24' {{ on 'click' this.signIn }}>Verify</button>
</div>

{{else}}

{{#if this.args.isSignIn}}
<h2>Welcome back to Travis CI VCS Proxy Service</h2>
{{else if this.args.isSignUp}}
<h2>Welcome to Travis CI VCS Proxy Service</h2>
{{/if}}
<div>
  <h3>Email</h3>
  <div class='entry-field'>
    <Input
      type='text'
      @id='email'
      @value={{this.email}}
      @type='text'
      class='text-field'
    />
  </div>
</div>
<div>
  <h3>Password</h3>
  <div class='entry-field password'>
    <Input
      @id='password'
      id='password'
      value={{this.password}}
      @value={{this.password}}
      type='password'
      class='text-field'
    />
    <div class='password-eye-icon' {{ on 'click' this.togglePassword }}>
      <SvgImage @name="icon-visible" />
    </div>
  </div>
</div>

{{#if this.args.isSignIn}}
<div class='forgot-password'>
  <LinkTo @route='forgot-password'>Forgot your password?</LinkTo>
</div>
<div>
  <button type='button' class='login-button' {{ on 'click' this.signIn }}>Login</button>
</div>
{{#unless this.isBeta }}
<div class='create-account'>
  Don't have an account? <LinkTo @route='sign-up'>Create Account</LinkTo>
</div>
{{/unless}}
{{else if this.args.isSignUp}}
<div class='password-requirements'>
  Password must include at least 6 characters including at least one non-alphabetic character (number or special character)
</div>
<div>
  <button type='button' class='login-button create' {{ on 'click' this.signUp }}>Create account</button>
</div>
<div class='terms'>
  By creating an account, you agree to the <ExternalLinkTo href={{this.config.urls.tos}} title="Terms of Service">Terms of Service</ExternalLinkTo> and <ExternalLinkTo href={{this.config.urls.privacyPolicy}} title="Privacy Policy">Privacy Policy</ExternalLinkTo>
</div>
<div class='create-account'>
  Already have an account? <LinkTo @route='sign-in'>Login</LinkTo>
</div>
{{else if this.args.isLanding}}
<div>
  <button type='button' class='login-button' {{ on 'click' this.signIn }}>Login</button>
</div>
{{/if}}

{{/if}}
