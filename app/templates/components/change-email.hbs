<div class="settings-page-container settings-page-container--center">
  <h2 class='text-black ta-c fs-36 mt-24 mb-32'>Change Email</h2>
    <div>
      <h3 class="fs-14 fw-600 tt-u">Old Email</h3>
      <div class='entry-field'>
          <Input
          @id='oldEmail'
          @type='text'
          @value={{this.oldEmail}}
          class='text-field'
          />
      </div>
    </div>
    <div class="mt-16">
      <h3 class="fs-14 fw-600 tt-u">New Email</h3>
      <div class='entry-field'>
          <Input
          @id='newEmail'
          @type='text'
          @value={{this.newEmail}}
          class='text-field'
          />
      </div>
    </div>
    <div class="mt-24">
      <LinkTo @route='index' @tagName='button' @class='button--white w-156 no-border'>Cancel</LinkTo>
      <button type='button' class='button--green w-156 ml-20' {{ on 'click' this.changeEmail }}>Change Email</button>
    </div>
</div>
